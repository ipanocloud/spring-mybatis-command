<!-- 						</goals> -->
<!-- 					</execution> -->
<!-- 				</executions> -->
				<dependencies>
					<dependency>
						<groupId>org.postgresql</groupId>
						<artifactId>postgresql</artifactId>
						<version>${postgre.jdbc.driver.version}</version>
					</dependency>
                    <dependency>
                        <groupId>tk.mybatis</groupId>
                        <artifactId>mapper</artifactId>
                        <version>${mapper.version}</version>
                    </dependency>
				</dependencies>
			</plugin>
		</plugins>
	</build>

